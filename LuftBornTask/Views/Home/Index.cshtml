@model IEnumerable<Luftborn.core.Models.Author>

    
<div class="row align-items-center mb-2">
    <div class="col">
        <h2 class="m-2 text-uppercase">Authors</h2>
    </div>
    <div class="col">
        <button onclick="EmptyInputs()" type="button" class="btn btn-primary text-white ml-auto d-block" data-toggle="modal" data-target="#exampleModal">Create New Author</button>
    </div>
</div>
@if(Model.Count() > 0) {
<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model)
   {
       <tr>
          <td>@item.Name</td>
          <td>
              <a class="btn btn-primary"  data-toggle="modal" data-target="#exampleModal" onclick="ChangeAuthorId('@item.Id','@item.Name')">Edit</a>
              <a class="btn btn-danger" onclick="Delete('@item.Id')">Delete</a>
          </td>
       </tr>
   }
    
  </tbody>
</table>


}
else {
    <div class="alert alert-info text-center text-uppercase">No Authors Exist</div>
}


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5>Author</h5>
      </div>
      <div class="modal-body">
       
          <div class="form-group">
            <input type="hidden" id="authorId" value="" />
            <label class="col-form-label">Name</label>
            <input onkeyup="CheckDisabled()" placeholder="Name" name="name" type="text" class="form-control" required id="name" value="">
            <span id="error" style="color: #f00;"></span>
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button class="btn btn-primary text-white" onclick="CreateOrUpdate()" id="save">Save</button>
      </div>
    </div>
  </div>
</div>